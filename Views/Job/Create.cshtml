@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@model EShift123.Models.Job
@using EShift123.Models
@{
    ViewData["Title"] = "Create Job";
}

<div class="container py-5">
    <h1 class="text-center mb-4 text-primary">Create New Job</h1>

    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm border-0 rounded-3">
                <div class="card-body p-4">
                    <form asp-action="Create" method="post" asp-antiforgery="true">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="mb-4">
                            <label asp-for="CustomerId" class="form-label"></label>
                            <select asp-for="CustomerId" class="form-control rounded-2" asp-items="ViewBag.CustomerId">
                                <option value="">-- Select Customer --</option>
                            </select>
                            <span asp-validation-for="CustomerId" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="StartLocation" class="form-label"></label>
                            <input asp-for="StartLocation" class="form-control rounded-2" />
                            <span asp-validation-for="StartLocation" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Destination" class="form-label"></label>
                            <input asp-for="Destination" class="form-control rounded-2" />
                            <span asp-validation-for="Destination" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="JobDate" class="form-label"></label>
                            <input asp-for="JobDate" type="date" class="form-control rounded-2" />
                            <span asp-validation-for="JobDate" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Status" class="form-label"></label>
                            <select asp-for="Status" class="form-control rounded-2" asp-items="Html.GetEnumSelectList<JobStatus>()"></select>
                            <span asp-validation-for="Status" class="text-danger small"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-success rounded-2 shadow-sm">Create Job</button>
                            <a asp-action="Index" class="btn btn-secondary rounded-2 shadow-sm">Back to List</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}