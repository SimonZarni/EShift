@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@model EShift123.Models.Assistant
@{
    ViewData["Title"] = "Edit Assistant";
}

<div class="container py-5">
    <h1 class="text-center mb-4 text-warning">Edit Assistant</h1>

    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm border-0 rounded-3">
                <div class="card-body p-4">
                    <form asp-action="Edit" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        <input type="hidden" asp-for="AssistantId" />

                        <div class="mb-4">
                            <label asp-for="Name" class="form-label"></label>
                            <input asp-for="Name" class="form-control rounded-2" />
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Phone" class="form-label"></label>
                            <input asp-for="Phone" class="form-control rounded-2" />
                            <span asp-validation-for="Phone" class="text-danger small"></span>
                        </div>
                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-warning rounded-2 shadow-sm">Save Changes</button>
                            <a asp-action="Index" class="btn btn-secondary rounded-2 shadow-sm">Back to List</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}