@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@model EShift123.Models.Product

@{
    ViewData["Title"] = "Product Details";
}

<div class="container py-5">
    <h1 class="text-center mb-4 text-info">Product Details</h1>

    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm border-0 rounded-3">
                <div class="card-body p-4">
                    <dl class="row">
                        <dt class="col-sm-4 text-muted">@Html.DisplayNameFor(model => model.Name)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Name)</dd>

                        <dt class="col-sm-4 text-muted">@Html.DisplayNameFor(model => model.Category)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Category)</dd>

                        <dt class="col-sm-4 text-muted">@Html.DisplayNameFor(model => model.Description)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Description)</dd>

                        <dt class="col-sm-4 text-muted">@Html.DisplayNameFor(model => model.WeightKg)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.WeightKg) Kg</dd>

                        <dt class="col-sm-4 text-muted">Customer Name</dt> @* New row for Customer Name *@
                        <dd class="col-sm-8 text-dark fw-bold">
                            @* Display Customer Name, ensuring Customer object is not null *@
                            @(Model.Customer != null ? Html.DisplayFor(model => model.Customer.Name) : "N/A")
                        </dd>
                    </dl>
                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="Edit" asp-route-productId="@Model.ProductId" class="btn btn-primary rounded-pill shadow-sm px-4">Edit</a>
                        <a asp-action="Index" class="btn btn-secondary rounded-pill shadow-sm px-4">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
