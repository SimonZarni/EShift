<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Admin</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

    <style>
        body {
            overflow-x: hidden;
        }

        #sidebar {
            min-height: 100vh;
            background-color: #343a40;
            transition: all 0.3s;
        }

            #sidebar .nav-link {
                color: #adb5bd;
            }

                #sidebar .nav-link.active,
                #sidebar .nav-link:hover {
                    background-color: #495057;
                    color: #fff;
                }

            #sidebar.collapsed {
                margin-left: -250px;
            }

        #content {
            width: 100%;
            padding: 20px;
            transition: margin-left 0.3s;
            margin-left: 250px;
        }

            #content.expanded {
                margin-left: 0;
            }
    </style>
</head>
<body>
    <div class="d-flex">
        <nav id="sidebar" class="d-flex flex-column p-3 position-fixed" style="width: 250px;">
            <a href="#" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-white text-decoration-none">
                <span class="fs-4">Admin Panel</span>
            </a>
            <hr />
            <ul class="nav nav-pills flex-column mb-auto">
                <li class="nav-item">
                    <a href="/Admin/Dashboard" class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Dashboard" && ViewContext.RouteData.Values["controller"]?.ToString() == "Admin" ? "active" : "")">
                        <i class="bi bi-speedometer2 me-2"></i> Dashboard
                    </a>
                </li>
                <li>
                    <a href="/Job" class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Job" ? "active" : "")">
                        <i class="bi bi-list-task me-2"></i> Jobs
                    </a>
                </li>
                <li>
                    <a href="/User" class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "User" ? "active" : "")">
                        <i class="bi bi-people me-2"></i> Customers
                    </a>
                </li>
                <li>
                    <a href="/Lorry" class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Lorry" ? "active" : "")">
                        <i class="bi bi-truck me-2"></i> Lorries
                    </a>
                </li>
                <li>
                    <a href="/Driver" class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Driver" ? "active" : "")">
                        <i class="bi bi-person me-2"></i> Drivers
                    </a>
                </li>
                <li>
                    <a href="/Assistant" class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Assistant" ? "active" : "")">
                        <i class="bi bi-person-badge me-2"></i> Assistants
                    </a>
                </li>
                <li>
                    <a href="/Container" class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Container" ? "active" : "")">
                        <i class="bi bi-box-seam me-2"></i> Containers
                    </a>
                </li>
                <li>
                    <a href="/TransportUnit" class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "TransportUnit" ? "active" : "")">
                        <i class="bi bi-truck-flatbed me-2"></i> Transport Units
                    </a>
                </li>
                <li>
                    <a href="/Load" class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Load" ? "active" : "")">
                        <i class="bi bi-box me-2"></i> Loads
                    </a>
                </li>
                <li>
                    <a href="/Product" class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Product" ? "active" : "")">
                        <i class="bi bi-box-fill me-2"></i> Products
                    </a>
                </li>
            </ul>
            <hr />
            <div>
                <form asp-controller="Account" class="nav-link text-dark" asp-action="Logout" method="post">
                    <button type="submit" class="btn btn-danger w-100">Logout</button>
                </form>
            </div>
        </nav>

        <div id="content" class="flex-grow-1">
            <button class="btn btn-primary d-md-none mb-3" id="sidebarToggle">
                <i class="bi bi-list"></i> Menu
            </button>

            @RenderBody()
        </div>
    </div>

    <!-- Bootstrap JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- jQuery CDN (Loaded FIRST) -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>

    <!-- jQuery Validation CDN (Loaded AFTER jQuery) -->
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.20.0/dist/jquery.validate.min.js"></script>

    <!-- jQuery Unobtrusive Validation CDN (Loaded AFTER jQuery Validation) -->
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@4.0.0/dist/jquery.validate.unobtrusive.min.js"></script>

    <script>
        const sidebar = document.getElementById('sidebar');
        const content = document.getElementById('content');
        const toggleBtn = document.getElementById('sidebarToggle');

        toggleBtn.addEventListener('click', () => {
            sidebar.classList.toggle('collapsed');
            content.classList.toggle('expanded');
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
