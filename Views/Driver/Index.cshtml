@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@model IEnumerable<EShift123.Models.Driver>
@{
    ViewData["Title"] = "Drivers";
}

<div class="container py-5">
    <h1 class="text-center mb-4 text-primary">Drivers (Admin View)</h1>

    <p class="text-center mb-4">
        <a asp-action="Create" class="btn btn-success rounded-2 shadow-sm">
            Create New Driver
        </a>
    </p>

    <div class="table-responsive rounded-3 shadow-sm border">
        <table class="table table-striped table-hover mb-0">
            <thead class="table-light">
                <tr>
                    <th scope="col" class="py-3 px-3">
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th scope="col" class="py-3 px-3">
                        @Html.DisplayNameFor(model => model.Phone)
                    </th>
                    <th scope="col" class="py-3 px-3">
                        @Html.DisplayNameFor(model => model.LicenseNumber)
                    </th>
                    <th scope="col" class="py-3 px-3">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="py-3 px-3">
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td class="py-3 px-3">
                            @Html.DisplayFor(modelItem => item.Phone)
                        </td>
                        <td class="py-3 px-3">
                            @Html.DisplayFor(modelItem => item.LicenseNumber)
                        </td>
                        <td class="py-3 px-3">
                            <a asp-action="Edit" asp-route-id="@item.DriverId" class="btn btn-sm btn-primary">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.DriverId" class="btn btn-sm btn-info">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.DriverId" class="btn btn-sm btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
