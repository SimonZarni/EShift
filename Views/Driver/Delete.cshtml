@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@model EShift123.Models.Driver
@{
    ViewData["Title"] = "Delete Driver";
}

<div class="container py-5">
    <h1 class="text-center mb-4 text-danger">Delete Driver</h1>
    <h3 class="text-center mb-5 text-muted">Are you sure you want to delete this driver?</h3>

    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm border-0 rounded-3">
                <div class="card-body p-4">
                    <dl class="row mb-4">
                        <dt class="col-sm-4">
                            Name:
                        </dt>
                        <dd class="col-sm-8">
                            @Model.Name
                        </dd>
                        <dt class="col-sm-4">
                            Phone:
                        </dt>
                        <dd class="col-sm-8">
                            @Model.Phone
                        </dd>
                        <dt class="col-sm-4">
                            License Number:
                        </dt>
                        <dd class="col-sm-8">
                            @Model.LicenseNumber
                        </dd>
                    </dl>

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="DriverId" />
                        <div class="d-flex justify-content-center mt-4">
                            <button type="submit" class="btn btn-danger me-2 rounded-2 shadow-sm">Delete</button>
                            <a asp-action="Index" class="btn btn-secondary rounded-2 shadow-sm">Back to List</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
