@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@model IEnumerable<EShift123.Models.TransportUnit>
@{
    ViewData["Title"] = "Transport Units";
}

<div class="container py-5">
    <h1 class="text-center mb-4 text-primary">Transport Units (Admin View)</h1>

    <p class="text-center mb-4">
        <a asp-action="Create" class="btn btn-success rounded-2 shadow-sm">
            Create New Transport Unit
        </a>
    </p>

    <div class="table-responsive rounded-3 shadow-sm border">
        <table class="table table-striped table-hover mb-0">
            <thead class="table-light">
                <tr>
                    <th scope="col" class="py-3 px-3">
                        @Html.DisplayNameFor(model => model.UnitNumber)
                    </th>
                    <th scope="col" class="py-3 px-3">
                        @Html.DisplayNameFor(model => model.Lorry)
                    </th>
                    <th scope="col" class="py-3 px-3">
                        @Html.DisplayNameFor(model => model.Driver)
                    </th>
                    <th scope="col" class="py-3 px-3">
                        @Html.DisplayNameFor(model => model.Assistant)
                    </th>
                    <th scope="col" class="py-3 px-3">
                        @Html.DisplayNameFor(model => model.Container)
                    </th>
                    <th scope="col" class="py-3 px-3">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="py-3 px-3">
                            @Html.DisplayFor(modelItem => item.UnitNumber)
                        </td>
                        <td class="py-3 px-3">
                            @Html.DisplayFor(modelItem => item.Lorry.NumberPlate)
                        </td>
                        <td class="py-3 px-3">
                            @Html.DisplayFor(modelItem => item.Driver.Name)
                        </td>
                        <td class="py-3 px-3">
                            @if (item.Assistant != null)
                            {
                                @Html.DisplayFor(modelItem => item.Assistant.Name)
                            }
                            else
                            {
                                <span>N/A</span>
                            }
                        </td>
                        <td class="py-3 px-3">
                            @Html.DisplayFor(modelItem => item.Container.ContainerNumber)
                        </td>
                        <td class="py-3 px-3">
                            <a asp-action="Edit" asp-route-id="@item.TransportUnitId" class="btn btn-sm btn-primary">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.TransportUnitId" class="btn btn-sm btn-info">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.TransportUnitId" class="btn btn-sm btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


