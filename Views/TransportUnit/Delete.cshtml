@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@model EShift123.Models.TransportUnit
@{
    ViewData["Title"] = "Delete Transport Unit";
}

<div class="container py-5">
    <h1 class="text-center mb-4 text-danger">Delete Transport Unit</h1>
    <h3 class="text-center mb-5 text-muted">Are you sure you want to delete this transport unit?</h3>

    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm border-0 rounded-3">
                <div class="card-body p-4">
                    <dl class="row mb-4">
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.UnitNumber)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.UnitNumber)
                        </dd>

                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Lorry)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Lorry.NumberPlate)
                        </dd>

                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Driver)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Driver.Name)
                        </dd>

                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Assistant)
                        </dt>
                        <dd class="col-sm-8">
                            @if (Model.Assistant != null)
                            {
                                @Html.DisplayFor(model => model.Assistant.Name)
                            }
                            else
                            {
                                <span>N/A</span>
                            }
                        </dd>

                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Container)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Container.ContainerNumber)
                        </dd>
                    </dl>

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="TransportUnitId" />
                        <div class="d-flex justify-content-center mt-4">
                            <button type="submit" class="btn btn-danger me-2 rounded-2 shadow-sm">Delete</button>
                            <a asp-action="Index" class="btn btn-secondary rounded-2 shadow-sm">Back to List</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


