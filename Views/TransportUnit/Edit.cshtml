@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@model EShift123.Models.TransportUnit
@{
    ViewData["Title"] = "Edit Transport Unit";
}

<div class="container py-5">
    <h1 class="text-center mb-4 text-warning">Edit Transport Unit</h1>

    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm border-0 rounded-3">
                <div class="card-body p-4">
                    <form asp-action="Edit" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        <input type="hidden" asp-for="TransportUnitId" />

                        <div class="mb-3">
                            <label asp-for="UnitNumber" class="form-label"></label>
                            <input asp-for="UnitNumber" class="form-control rounded-2" />
                            <span asp-validation-for="UnitNumber" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="LorryId" class="form-label"></label>
                            <select asp-for="LorryId" class="form-select rounded-2" asp-items="ViewBag.LorryId"></select>
                            <span asp-validation-for="LorryId" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="DriverId" class="form-label"></label>
                            <select asp-for="DriverId" class="form-select rounded-2" asp-items="ViewBag.DriverId"></select>
                            <span asp-validation-for="DriverId" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="AssistantId" class="form-label"></label>
                            <select asp-for="AssistantId" class="form-select rounded-2" asp-items="ViewBag.AssistantId">
                                <option value="">-- Select Assistant (Optional) --</option>
                            </select>
                            <span asp-validation-for="AssistantId" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="ContainerId" class="form-label"></label>
                            <select asp-for="ContainerId" class="form-select rounded-2" asp-items="ViewBag.ContainerId"></select>
                            <span asp-validation-for="ContainerId" class="text-danger small"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-warning rounded-2 shadow-sm">Save Changes</button>
                            <a asp-action="Index" class="btn btn-secondary rounded-2 shadow-sm">Back to List</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


