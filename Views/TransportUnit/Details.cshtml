@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@model EShift123.Models.TransportUnit
@{
    ViewData["Title"] = "Transport Unit Details";
}

<div class="container py-5">
    <h1 class="text-center mb-4 text-info">Transport Unit Details: @Model.UnitNumber</h1>

    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8">
            <div class="card shadow-sm border-0 rounded-3">
                <div class="card-body p-4">
                    <dl class="row mb-4">
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.UnitNumber)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.UnitNumber)
                        </dd>

                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Lorry)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Lorry.NumberPlate) (@Model.Lorry.Model)
                        </dd>

                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Driver)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Driver.Name) (@Model.Driver.LicenseNumber)
                        </dd>

                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Assistant)
                        </dt>
                        <dd class="col-sm-8">
                            @if (Model.Assistant != null)
                            {
                                @Html.DisplayFor(model => model.Assistant.Name)
                            }
                            else
                            {
                                <span>N/A</span>
                            }
                        </dd>

                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Container)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Container.ContainerNumber)
                        </dd>
                    </dl>

                    <div class="d-flex justify-content-center mt-4">
                        <a asp-action="Edit" asp-route-id="@Model.TransportUnitId" class="btn btn-primary me-2 rounded-2 shadow-sm">Edit</a>
                        <a asp-action="Index" class="btn btn-secondary rounded-2 shadow-sm">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


