    Layout = "~/Views/Shared/_Layout.cshtml"; // Example: using a general layout
    ViewData["Title"] = "About Us";
}

<div class="hero-about">
    <div class="container">
        <h1>About EShift123</h1>
        <p>Your Trusted Partner in Seamless Logistics and Transportation</p>
    </div>
</div>

<div class="container">
    <section class="about-section">
        <h2>Our Mission <i class="bi bi-rocket-takeoff-fill ms-2 text-info"></i></h2>
        <p class="text-center lead">
            At EShift123, our mission is to **revolutionize the logistics and transportation industry** by providing seamless, efficient, and reliable solutions. We connect businesses and individuals with a robust network of transport units, ensuring every load, big or small, reaches its destination safely and on time. We are committed to leveraging technology to optimize routes, enhance communication, and deliver unparalleled customer satisfaction.
        </p>
    </section>

    <section class="about-section">
        <h2>Our Vision <i class="bi bi-eye-fill ms-2 text-info"></i></h2>
        <p class="text-center lead">
            To be the **leading digital logistics platform**, recognized for our innovative technology, exceptional service, and unwavering commitment to sustainability and customer success. We envision a future where logistics are simplified, transparent, and accessible to everyone.
        </p>
    </section>

    <section class="about-section">
        <h2>Who We Are <i class="bi bi-people-fill ms-2 text-info"></i></h2>
        <p class="text-center lead">
            EShift123 is a dynamic and forward-thinking company built on the principles of **integrity, efficiency, and customer-centricity**. Our platform streamlines the job request process, from detailed load specifications to product tracking and final delivery. We empower customers with control and visibility, while providing transport units with optimized assignments.
        </p>
        <div class="text-center mt-4">
            <img src="/images/team-collaboration.jpg" alt="EShift123 Team Collaboration" class="img-fluid rounded shadow-sm" style="max-width: 600px;">
        </div>
    </section>

    <section class="about-section">
        <h2>Our Values <i class="bi bi-star-fill ms-2 text-info"></i></h2>
        <ul class="values-list">
            <li>
                <i class="bi bi-check-circle-fill"></i>
                <h4>Reliability</h4>
                <p>We deliver on our promises, ensuring consistent and dependable service.</p>
            </li>
            <li>
                <i class="bi bi-lightbulb-fill"></i>
                <h4>Innovation</h4>
                <p>We continuously seek new ways to improve our platform and services.</p>
            </li>
            <li>
                <i class="bi bi-graph-up-arrow"></i>
                <h4>Transparency</h4>
                <p>We believe in clear communication and honest dealings.</p>
            </li>
            <li>
                <i class="bi bi-heart-fill"></i>
                <h4>Customer Focus</h4>
                <p>Our customers' needs are at the heart of everything we do.</p>
            </li>
            <li>
                <i class="bi bi-leaf-fill"></i>
                <h4>Sustainability</h4>
                <p>We are committed to environmentally responsible logistics practices.</p>
            </li>
        </ul>
    </section>

    
    <section class="about-section">
        <h2>Our Team <i class="bi bi-person-bounding-box ms-2 text-info"></i></h2>
        <div class="row text-center">
            <div class="col-md-4 mb-4">
                <div class="team-member">
                    <img src="/images/team/member1.jpg" alt="Team Member 1">
                    <h5>John Doe</h5>
                    <p>CEO & Founder</p>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="team-member">
                    <img src="/images/team/member2.jpg" alt="Team Member 2">
                    <h5>Jane Smith</h5>
                    <p>Head of Operations</p>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="team-member">
                    <img src="/images/team/member3.jpg" alt="Team Member 3">
                    <h5>Michael Brown</h5>
                    <p>Lead Developer</p>
                </div>
            </div>
        </div>
    </section>
   

